<odoo>
    <record id="res_device_school_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.school</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='hr_employee_self_edit']" position="after">
                <div class="d-flex">
                    <p>Hide panel</p>
                    <field name="hide_panel" class="ml16"/>
                </div>
            </xpath>
        </field>
    </record>


</odoo>